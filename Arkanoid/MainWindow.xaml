<Window x:Class="Arkanoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arkanoid"
        mc:Ignorable="d"
        x:Name="Window"
        Title="MainWindow" Height="400" Width="600"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
    <Grid x:Name="Grid">
        <Rectangle x:Name="Background" Fill="Gray" Stroke="Black" Opacity="0.01" />
        <Image x:Name="img_ball" HorizontalAlignment="Left" Margin="158,248,0,0" VerticalAlignment="Top" Source="Resources/ball.bmp" Height="25" Width="25"/>
        <Image HorizontalAlignment="Left" Height="50" Margin="278,108,0,0" VerticalAlignment="Top" Width="50" Source="Resources/brick.bmp"/>
        <Image x:Name="paddle" HorizontalAlignment="Left" Margin="236,335,0,0" VerticalAlignment="Top" Source="Resources/paddle.bmp" Height="25" Width="120"/>
    </Grid>
</Window>
